<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="@drawable/gradient"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startRegion"
            android:id="@+id/active_transport_row_start"
            android:textColor="#fff"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender"
            android:id="@+id/active_transport_row_sender"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="destinationRegion"
            android:id="@+id/active_transport_row_destination"
            android:textColor="#fff"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiver"
            android:id="@+id/active_transport_row_receiver"
            android:textColor="#fff"
            android:textSize="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item"
            android:id="@+id/active_transport_row_item"
            android:textColor="#fff"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:id="@+id/active_transport_row_quantity"
            android:textColor="#fff"
            android:textSize="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes"
            android:id="@+id/active_transport_row_minutes"
            android:textColor="#fff"
            android:textSize="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-05-03 20:13:45"
            android:id="@+id/active_transport_row_time"
            android:textColor="#fff"
            android:textSize="16dp"
            android:maxLines="2"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>