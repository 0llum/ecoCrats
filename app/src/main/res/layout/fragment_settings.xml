<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.ollum.ecoCrats.SettingsFragment">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_oldPassword"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Old Password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_newPassword"
        android:layout_below="@+id/settings_oldPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="New Password"
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_newEmail"
        android:hint="New Email Address"
        android:inputType="textEmailAddress"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/settings_changePassword" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Change Password"
        android:id="@+id/settings_changePassword"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/settings_newPWConfirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Change Email"
        android:id="@+id/settings_changeEmail"
        android:background="@drawable/button_action"
        android:layout_below="@+id/settings_newEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Delete Account"
        android:id="@+id/settings_deleteAccount"
        android:background="@drawable/button_action"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_newPWConfirmation"
        android:hint="New Password Confirmation"
        android:inputType="textPassword"
        android:layout_below="@+id/settings_newPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>
