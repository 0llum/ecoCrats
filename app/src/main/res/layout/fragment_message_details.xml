<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/message_details_sender"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient"
        android:textColor="#fff"
        android:textSize="20dp"
        android:text="@string/sender"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/message_details_subject"
        android:background="@drawable/gradient"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/message_details_sender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/subject"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/message_details_message"
        android:background="@drawable/gradient"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/message_details_subject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/message"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
