        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ollum.ecoCrats.Activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ollum.ecoCrats.Activities.SignUp"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ollum.ecoCrats.Activities.Login"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ollum.ecoCrats.Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ollum.ecoCrats.Countries"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ollum.ecoCrats.Regions"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" >
