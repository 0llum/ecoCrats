<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ollum.ecoCrats.Menu"
    android:background="@drawable/gradientbackground">

    Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="New Game"
        android:id="@+id/menu_createGame"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Friends"
        android:id="@+id/menu_friends"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/menu_settings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Countries"
        android:id="@+id/menu_countries"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/menu_friends"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Items"
        android:id="@+id/menu_items"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/menu_countries"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Join Chatroom"
        android:id="@+id/menu_openGames"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Logout"
        android:id="@+id/menu_logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_action"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/menu_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Settings"
        android:id="@+id/menu_settings"
        android:background="@drawable/button_action"
        android:layout_below="@+id/menu_logout"
        android:layout_alignLeft="@+id/menu_logout"
        android:layout_alignStart="@+id/menu_logout"
        android:layout_marginTop="10dp"/>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Messages"
        android:id="@+id/menu_messages"
        android:background="@drawable/button_action"
        android:layout_below="@+id/menu_items"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
